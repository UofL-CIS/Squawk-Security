{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "expression": "@Level in ['Error', 'Fatal']",
          "path": "Serilogger.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "expression": "@Level = 'Warning'",
          "connectionInfo": {
            
            },
            "Port": 587,
            "EnableSsl": true
          }
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "expression": "@Level = 'Information'",
          "serverUrl": "http://seq:80"
        }
      }
    ]
  }
}
